---
import { Icon } from '@astrojs/starlight/components';
import demoVideo from '../assets/demo.mp4';

// SEO & Social Meta Configuration
const siteUrl = 'https://repobase.dev'; // Update to your actual domain
const pageTitle = 'Repobase ‚Äì AI-Powered Repository Search';
const pageDescription = 'Give your AI agents instant access to the repositories that matter. Local indexing, semantic search, and MCP integration for Cursor, Claude, and more.';
const ogImage = `${siteUrl}/og-image.png`;
const twitterHandle = '@repobase'; // Update with your Twitter handle or remove

const features = [
  {
    title: 'Semantic Search',
    description: 'Ask "Where is the OAuth flow defined?" instead of grepping for strings. Find code by meaning, not keywords.',
    icon: 'üîç',
  },
  {
    title: 'Seamless MCP Integration',
    description: 'Agents simply call list_repos and search. No manual file paths or messy grep commands.',
    icon: 'üîå',
  },
  {
    title: 'Code as Documentation',
    description: 'The source itself is the ultimate source of truth. Latest patterns, real implementations, always current.',
    icon: 'üìñ',
  },
  {
    title: 'Local & Private',
    description: 'Everything stays on your machine. Fast indexing with a local model. Works offline. Perfect for private repos.',
    icon: 'üîí',
  },
];

const mcpConfig = `{
  "mcpServers": {
    "repobase": {
      "command": "repobase-mcp"
    }
  }
}`;
---

<!doctype html>
<html lang="en" data-theme="dark">
  <head>
    <!-- Basic Meta Tags -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={pageDescription} />
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Repobase" />
    <title>{pageTitle}</title>
    
    <!-- Canonical URL -->
    <link rel="canonical" href={siteUrl} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    
    <!-- Theme Color -->
    <meta name="theme-color" content="#20a1a1" />
    <meta name="msapplication-TileColor" content="#0f0e0c" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={siteUrl} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content="Repobase - Your code, indexed locally, ready for AI" />
    <meta property="og:site_name" content="Repobase" />
    <meta property="og:locale" content="en_US" />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={siteUrl} />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />
    <meta name="twitter:image" content={ogImage} />
    <meta name="twitter:image:alt" content="Repobase - Your code, indexed locally, ready for AI" />
    
    <!-- Additional SEO -->
    <meta name="keywords" content="AI, code search, repository, MCP, semantic search, Cursor, Claude, local indexing, developer tools" />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;600;700&display=swap" rel="stylesheet" />
    
    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "SoftwareApplication",
      "name": "Repobase",
      "description": pageDescription,
      "url": siteUrl,
      "applicationCategory": "DeveloperApplication",
      "operatingSystem": "macOS, Linux, Windows",
      "offers": {
        "@type": "Offer",
        "price": "0",
        "priceCurrency": "USD"
      },
      "author": {
        "@type": "Organization",
        "name": "Repobase"
      },
      "softwareVersion": "1.0",
      "keywords": "AI, code search, repository, MCP, semantic search"
    })} />
    <style>
      :root {
        /* Colors from TUI theme */
        --neutral-900: #0f0e0c;
        --neutral-800: #181714;
        --neutral-700: #1f1d19;
        --neutral-600: #28251f;
        --neutral-500: #353128;
        --neutral-400: #4d4840;
        --neutral-300: #6b645a;
        --neutral-200: #8c867c;
        --neutral-100: #b8b3a9;
        --neutral-50: #e8e6e1;
        
        --primary-500: #20a1a1;
        --primary-400: #3dbdbd;
        --primary-300: #66cfcf;
        --primary-700: #156363;
        --primary-900: #0a2e2e;
        
        --success-400: #4fb36a;
        --warning-400: #c99428;
        --error-400: #db4f4f;
      }
      
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      html {
        scroll-behavior: smooth;
      }
      
      body {
        font-family: 'JetBrains Mono', 'SF Mono', 'Fira Code', monospace;
        background: var(--neutral-800);
        color: var(--neutral-50);
        line-height: 1.6;
        min-height: 100vh;
      }
      
      /* Animated background */
      .bg-pattern {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: var(--neutral-900);
        z-index: -1;
      }
      
      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
      }
      
      /* Navigation */
      nav {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        padding: 1rem 0;
        background: rgba(15, 14, 12, 0.8);
        backdrop-filter: blur(12px);
        border-bottom: 1px solid var(--neutral-500);
        z-index: 100;
      }
      
      .nav-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
      
      .logo {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-size: 1.25rem;
        font-weight: 600;
        color: var(--neutral-50);
        text-decoration: none;
      }
      
      .logo-icon {
        width: 32px;
        height: 32px;
      }
      
      .nav-links {
        display: flex;
        align-items: center;
        gap: 2rem;
      }
      
      .nav-link {
        color: var(--neutral-200);
        text-decoration: none;
        font-size: 0.875rem;
        transition: color 0.15s ease;
      }
      
      .nav-link:hover {
        color: var(--primary-400);
      }
      
      .github-link {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background: var(--neutral-700);
        border: 1px solid var(--neutral-500);
        border-radius: 6px;
        color: var(--neutral-50);
        text-decoration: none;
        font-size: 0.875rem;
        transition: all 0.15s ease;
      }
      
      .github-link:hover {
        background: var(--neutral-600);
        border-color: var(--primary-500);
      }
      
      /* Hero */
      .hero {
        padding: 10rem 0 6rem;
        text-align: center;
      }
      
      .hero h1 {
        font-size: clamp(2.5rem, 6vw, 4rem);
        font-weight: 700;
        line-height: 1.1;
        margin-bottom: 1.5rem;
        opacity: 0;
        animation: fadeInUp 0.6s ease forwards;
        animation-delay: 0.1s;
      }
      
      .hero h1 span {
        background: linear-gradient(135deg, var(--primary-400) 0%, var(--primary-300) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }
      
      .hero-description {
        font-size: 1.125rem;
        color: var(--neutral-200);
        max-width: 600px;
        margin: 0 auto 1.5rem;
        opacity: 0;
        animation: fadeInUp 0.6s ease forwards;
        animation-delay: 0.2s;
      }
      
      .install-command {
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.75rem 1rem;
        background: var(--neutral-900);
        border: 1px solid var(--neutral-500);
        border-radius: 8px;
        margin-bottom: 2rem;
        opacity: 0;
        animation: fadeInUp 0.6s ease forwards;
        animation-delay: 0.25s;
      }
      
      .install-command code {
        font-size: 0.9375rem;
        color: var(--primary-400);
      }
      
      .copy-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0.375rem;
        background: transparent;
        border: 1px solid var(--neutral-500);
        border-radius: 4px;
        color: var(--neutral-300);
        cursor: pointer;
        transition: all 0.15s ease;
      }
      
      .copy-btn:hover {
        background: var(--neutral-700);
        border-color: var(--primary-500);
        color: var(--primary-400);
      }
      
      .hero-actions {
        display: flex;
        justify-content: center;
        gap: 1rem;
        flex-wrap: wrap;
        opacity: 0;
        animation: fadeInUp 0.6s ease forwards;
        animation-delay: 0.3s;
      }
      
      .btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.875rem 1.75rem;
        border-radius: 8px;
        font-size: 0.9375rem;
        font-weight: 500;
        text-decoration: none;
        transition: all 0.2s ease;
        font-family: inherit;
      }
      
      .btn-primary {
        background: linear-gradient(135deg, var(--primary-500) 0%, var(--primary-700) 100%);
        color: var(--neutral-50);
        border: 1px solid var(--primary-500);
      }
      
      .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 24px rgba(32, 161, 161, 0.3);
      }
      
      .btn-secondary {
        background: var(--neutral-700);
        color: var(--neutral-50);
        border: 1px solid var(--neutral-500);
      }
      
      .btn-secondary:hover {
        background: var(--neutral-600);
        border-color: var(--primary-500);
      }
      
      /* Demo video */
      .demo-preview {
        max-width: 900px;
        margin: 4rem auto 0;
        opacity: 0;
        animation: fadeInUp 0.6s ease forwards;
        animation-delay: 0.4s;
      }
      
      .demo-container {
        background: var(--neutral-900);
        border: 1px solid var(--neutral-500);
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 24px 48px rgba(0, 0, 0, 0.5);
      }
      
      .demo-header {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1rem;
        background: var(--neutral-700);
        border-bottom: 1px solid var(--neutral-500);
      }
      
      .demo-dot {
        width: 12px;
        height: 12px;
        border-radius: 50%;
      }
      
      .demo-dot.red { background: var(--error-400); }
      .demo-dot.yellow { background: var(--warning-400); }
      .demo-dot.green { background: var(--success-400); }
      
      .demo-title {
        flex: 1;
        text-align: center;
        font-size: 0.75rem;
        color: var(--neutral-300);
      }
      
      .demo-video {
        display: block;
        width: 100%;
        height: auto;
        background: var(--neutral-900);
      }
      
      /* Features */
      .features {
        padding: 6rem 0;
      }
      
      .section-header {
        text-align: center;
        margin-bottom: 4rem;
      }
      
      .section-header h2 {
        font-size: 2rem;
        font-weight: 600;
        margin-bottom: 1rem;
      }
      
      .section-header p {
        color: var(--neutral-200);
        max-width: 500px;
        margin: 0 auto;
      }
      
      .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5rem;
      }
      
      .feature-card {
        background: var(--neutral-700);
        border: 1px solid var(--neutral-500);
        border-radius: 12px;
        padding: 2rem;
        transition: all 0.2s ease;
      }
      
      .feature-card:hover {
        border-color: var(--primary-500);
        transform: translateY(-4px);
        box-shadow: 0 12px 32px rgba(0, 0, 0, 0.3);
      }
      
      .feature-icon {
        font-size: 2rem;
        margin-bottom: 1rem;
      }
      
      .feature-card h3 {
        font-size: 1.125rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
      }
      
      .feature-card p {
        color: var(--neutral-200);
        font-size: 0.9375rem;
      }
      
      .features-cta {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1.5rem;
        margin-top: 3rem;
        padding: 1rem 1.5rem;
        background: var(--neutral-800);
        border: 1px solid var(--neutral-500);
        border-radius: 8px;
      }
      
      .features-cta-text {
        color: var(--neutral-200);
        font-size: 0.875rem;
      }
      
      .features-cta-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--primary-400);
        text-decoration: none;
        font-size: 0.875rem;
        font-weight: 500;
        white-space: nowrap;
        transition: all 0.15s ease;
      }
      
      .features-cta-link:hover {
        color: var(--primary-300);
      }
      
      .features-cta-link svg {
        transition: transform 0.15s ease;
      }
      
      .features-cta-link:hover svg {
        transform: translateX(3px);
      }
      
      @media (max-width: 640px) {
        .features-cta {
          flex-direction: column;
          gap: 0.75rem;
          text-align: center;
        }
      }
      
      /* Quick start */
      .quickstart {
        padding: 6rem 0;
        background: var(--neutral-900);
      }
      
      .quickstart-content {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 4rem;
        align-items: center;
      }
      
      @media (max-width: 768px) {
        .quickstart-content {
          grid-template-columns: 1fr;
          gap: 2rem;
        }
      }
      
      .quickstart-text h2 {
        font-size: 2rem;
        font-weight: 600;
        margin-bottom: 1rem;
      }
      
      .quickstart-text p {
        color: var(--neutral-200);
        margin-bottom: 1.5rem;
      }
      
      .quickstart-steps {
        list-style: none;
      }
      
      .quickstart-steps li {
        display: flex;
        align-items: flex-start;
        gap: 1rem;
        margin-bottom: 1rem;
        color: var(--neutral-100);
      }
      
      .step-number {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 24px;
        height: 24px;
        background: var(--primary-900);
        border: 1px solid var(--primary-500);
        border-radius: 50%;
        font-size: 0.75rem;
        color: var(--primary-400);
        flex-shrink: 0;
      }
      
      .code-block {
        background: var(--neutral-800);
        border: 1px solid var(--neutral-500);
        border-radius: 12px;
        overflow: hidden;
      }
      
      .code-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.75rem 1rem;
        background: var(--neutral-700);
        border-bottom: 1px solid var(--neutral-500);
      }
      
      .code-filename {
        font-size: 0.75rem;
        color: var(--neutral-300);
      }
      
      .code-copy {
        padding: 0.25rem 0.75rem;
        background: transparent;
        border: 1px solid var(--neutral-500);
        border-radius: 4px;
        color: var(--neutral-200);
        font-size: 0.75rem;
        cursor: pointer;
        font-family: inherit;
        transition: all 0.15s ease;
      }
      
      .code-copy:hover {
        background: var(--neutral-600);
        border-color: var(--primary-500);
        color: var(--neutral-50);
      }
      
      .code-content {
        padding: 1.5rem;
        font-size: 0.875rem;
        overflow-x: auto;
      }
      
      .code-content pre {
        margin: 0;
      }
      
      /* Footer */
      footer {
        padding: 3rem 0;
        border-top: 1px solid var(--neutral-500);
        text-align: center;
      }
      
      .footer-links {
        display: flex;
        justify-content: center;
        gap: 2rem;
        margin-bottom: 1.5rem;
      }
      
      .footer-link {
        color: var(--neutral-200);
        text-decoration: none;
        font-size: 0.875rem;
        transition: color 0.15s ease;
      }
      
      .footer-link:hover {
        color: var(--primary-400);
      }
      
      .footer-copyright {
        font-size: 0.75rem;
        color: var(--neutral-300);
      }
      
      /* Animations */
      @keyframes fadeInUp {
        from {
          opacity: 0;
          transform: translateY(20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
      
      /* Selection */
      ::selection {
        background: rgba(32, 161, 161, 0.3);
        color: var(--neutral-50);
      }
      
      /* Scrollbar */
      ::-webkit-scrollbar {
        width: 8px;
        height: 8px;
      }
      
      ::-webkit-scrollbar-track {
        background: var(--neutral-900);
      }
      
      ::-webkit-scrollbar-thumb {
        background: var(--neutral-400);
        border-radius: 4px;
      }
      
      ::-webkit-scrollbar-thumb:hover {
        background: var(--neutral-300);
      }
    </style>
  </head>
  <body>
    <div class="bg-pattern"></div>
    
    <nav>
      <div class="container nav-content">
        <a href="/" class="logo">
          <svg class="logo-icon" viewBox="0 0 32 32" fill="none" xmlns="http://www.w3.org/2000/svg">
            <rect x="2" y="2" width="28" height="28" rx="4" stroke="#20a1a1" stroke-width="2"/>
            <circle cx="10" cy="10" r="2" fill="#3dbdbd"/>
            <circle cx="10" cy="16" r="2" fill="#3dbdbd"/>
            <circle cx="10" cy="22" r="2" fill="#3dbdbd"/>
            <line x1="14" y1="10" x2="26" y2="10" stroke="#6b645a" stroke-width="2" stroke-linecap="round"/>
            <line x1="14" y1="16" x2="22" y2="16" stroke="#6b645a" stroke-width="2" stroke-linecap="round"/>
            <line x1="14" y1="22" x2="24" y2="22" stroke="#6b645a" stroke-width="2" stroke-linecap="round"/>
          </svg>
          repobase
        </a>
        
        <div class="nav-links">
          <a href="/introduction" class="nav-link">Docs</a>
          <a href="https://github.com/fernandoabolafio/repobase" class="github-link" target="_blank" rel="noopener">
            <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
              <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"/>
            </svg>
            GitHub
          </a>
        </div>
      </div>
    </nav>
    
    <main>
      <section class="hero">
        <div class="container">
          <h1>Your code, indexed locally<br /><span>ready for AI</span></h1>
          <p class="hero-description">
            Give your AI agents instant access to the repositories that matter. 
            Semantic search, local indexing, and seamless MCP integration. 
            No more copy-pasting docs or hoping the agent finds what it needs.
          </p>
          
          <div class="install-command">
            <code>npm install -g repobase</code>
            <button class="copy-btn" onclick="navigator.clipboard.writeText('npm install -g repobase')">
              <svg width="14" height="14" viewBox="0 0 16 16" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="5" y="5" width="9" height="9" rx="1"/>
                <path d="M3 11V3a1 1 0 011-1h8"/>
              </svg>
            </button>
          </div>
          
          <div class="hero-actions">
            <a href="/quick-start/" class="btn btn-primary">
              Get Started
              <svg width="16" height="16" viewBox="0 0 16 16" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M3 8h10M9 4l4 4-4 4"/>
              </svg>
            </a>
            <a href="https://github.com/fernandoabolafio/repobase" class="btn btn-secondary" target="_blank" rel="noopener">
              View on GitHub
            </a>
          </div>
          
          <div class="demo-preview">
            <div class="demo-container">
              <div class="demo-header">
                <div class="demo-dot red"></div>
                <div class="demo-dot yellow"></div>
                <div class="demo-dot green"></div>
                <span class="demo-title">repobase demo</span>
              </div>
              <video 
                class="demo-video" 
                src={demoVideo}
                autoplay
                loop
                muted
                playsinline
              />
            </div>
          </div>
        </div>
      </section>
      
      <section class="features">
        <div class="container">
          <div class="section-header">
            <h2>Built for AI Workflows</h2>
            <p>Give your AI agents the context they need. Works with Cursor, Opencode, Claude Code and more.</p>
          </div>
          
          <div class="features-grid">
            {features.map(feature => (
              <div class="feature-card">
                <div class="feature-icon">{feature.icon}</div>
                <h3>{feature.title}</h3>
                <p>{feature.description}</p>
              </div>
            ))}
          </div>
          
          <div class="features-cta">
            <span class="features-cta-text">AI agents need good context. Current methods are broken.</span>
            <a href="/introduction#why-repobase" class="features-cta-link">
              Learn why Repobase
              <svg width="14" height="14" viewBox="0 0 16 16" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M3 8h10M9 4l4 4-4 4"/>
              </svg>
            </a>
          </div>
        </div>
