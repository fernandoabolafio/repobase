{
  "name": "repobase",
  "version": "1.0.2",
  "description": "Index and search your repositories with AI. Includes TUI and MCP server.",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "bin": {
    "repobase": "./dist/bin/repobase.js",
    "repobase-mcp": "./dist/bin/repobase-mcp.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "bun run scripts/build.ts",
    "dev:tui": "bun run --cwd packages/tui start",
    "dev:mcp": "bun run --cwd packages/mcp-server start",
    "test": "bun run --cwd packages/engine test",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "repository",
    "search",
    "semantic-search",
    "tui",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fernandoabolafio/repobase.git"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "@effect/platform": "^0.93.6",
    "@effect/platform-bun": "^0.86.0",
    "@lancedb/lancedb": "^0.15.0",
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@opentui/core": "^0.1.0",
    "@opentui/react": "^0.1.0",
    "@xenova/transformers": "^2.17.2",
    "effect": "^3.19.9",
    "fast-glob": "^3.3.3",
    "micromatch": "^4.0.5",
    "react": "^19.0.0",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.0.0",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "semantic-release": "^24.2.0",
    "typescript": "^5.9.3"
  }
}
